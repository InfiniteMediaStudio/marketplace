---
import Layout from '../../app/Layout.astro';
---
<Layout>
	<div class="max-w-md mx-auto card my-5 text-center">
		<div class="title">Create Account</div>
		<div class="title-blue">Marketplace</div>
		<div class="divider my-5"></div>
		<form  id="register-form" class="form flex flex-col gap-5">
			<div class="input-icon">
				<i class="fas fa-user left-4"></i>
				<input id="name" name="name" type="text" placeholder="Full Name" required />
			</div>
			<div class="input-icon">
				<i class="fas fa-envelope left-4"></i>
				<input id="email" name="email" type="email" placeholder="name@email.com" required />
			</div>
			<div class="input-icon">
				<i class="fas fa-phone left-4"></i>
				<input id="phone" name="phone" type="text" placeholder="Phone Number" required/>
			</div>
			<div class="input-icon" x-data="{ loginShow: false }">
				<i class="fas fa-key left-4"></i>
				<button type="button" @click="loginShow = !loginShow" class="absolute top-0 right-8">
					<i x-cloak x-show="loginShow" class="far fa-eye-slash"></i>
					<i x-show="!loginShow" class="far fa-eye" ></i>
				</button>
				<input :type=" loginShow ? 'text': 'password' " name="password" id="password" placeholder="Your Password" />
			</div>
			<div class="flex flex-row items-center justify-center gap-2">
				<input id="terms" aria-describedby="terms" type="checkbox"/>
				<label for="terms" class="text cursor-pointer mt-1"> I accept the</label>
				<a  class="link active text-sm" type="button">Terms &amp; Policies</a>
			</div>
			<button type="submit" class="btn-blue mx-auto">Create Account</button>
		</form>
		<div class="divider my-5"></div>
		<div class="flex flex-col sm:flex-row justify-center items-center gap-1">
			<p class="text pr-2">Already have an account?</p>
			<a href="/auth/signin" class="link active">Login</a>
		</div>
	</div>
</Layout>
