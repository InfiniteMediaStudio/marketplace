---
import { url } from '../lib/data.js'
const {active, styles, icon } = Astro.props;
const menus = [
    { name: 'Home', icon: 'fa-home', active: active?.includes('home')! ? 'active' : '', link: ''},
    { name: 'Ads', icon: 'fa-ad', active: active?.includes('ads')! ? 'active' : '', link: 'ads' },
    { name: 'Stores', icon: 'fa-store', active: active?.includes('stores')! ? 'active' : '', link: 'stores' },
    { name: 'Categories', icon: 'fa-list', active: active?.includes('categories')! ? 'active' : '', link: 'categories'},
]
---
<ul class="flex">
{menus.map((c: any) => (
    <li>
        <a class={`${c.active} ${styles}`} href={url(c.link)} title={c.name}>
            {icon && <i class={`fas ${c.icon} mr-1 ml-1`}></i>}{c.name}
        </a>
    </li>
))}
</ul>